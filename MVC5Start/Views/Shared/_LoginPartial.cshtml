@using MVC5Start.Infrastructure.Identity
@if (this.Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "Session", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(this.User.GetFullNameAndRoles(), "Manage", "Account", null, new { title = "Manage My Account" })</li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log Off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", null, new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log In", "Login", "Session", null, new { id = "loginLink" })</li>
    </ul>
}
