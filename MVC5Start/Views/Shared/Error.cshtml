@model MVC5Start.ViewModels.ErrorViewModel
@{
    this.ViewBag.Title = "Error";
}

<hgroup>
    <h2 class="text-danger">@ViewBag.Title</h2>
    <h3 class="text-danger">An error occurred while processing your request!</h3>
</hgroup>

@if (string.IsNullOrEmpty(this.Model.Message) == false)
{
    <h3 class="text-danger">@this.Model.Message</h3>
}