@model MVC5Start.ViewModels.Account.GoogleAuthenticatorViewModel
@{
    ViewBag.Title = "Enable Google Authenticator";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-8">
        <h3>1. Add @Constants.ApplicationName to Google Authenticator</h3>
        <p>Open Google Authenticator and add @Constants.ApplicationName by scanning the QR Code to the right.</p>
        <h3>2. Enter the 6 digit code that Google Authenticator generates</h3>
        <p>Verify that @Constants.ApplicationName is added correctly in Google Authenticator by entering the 6 digit code which Google Authenticator generates for @Constants.ApplicationName below, and then click Enable.</p>
        <h3>3. Take note of the code for disabling the Two Factor Authentication process:</h3>
        <h3>@this.Model.DisableTwoFactorAuthPassword</h3>
        <p>In case you lose the access to your Google Authenticator device, use this code for disabling it.</p>
        @using (Html.BeginForm("EnableGoogleAuthenticator", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()   
            @Html.ValidationSummary(false)
            @Html.HiddenFor(m => m.SecretKey)
            @Html.HiddenFor(m => m.BarcodeUrl)
            @Html.HiddenFor(m => m.DisableTwoFactorAuthPassword)
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Enable" />
                </div>
            </div>
        }
    </div>
    <div class="col-md-4">
        <div id="qrcode"></div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/qrcode.js"></script>
    <script type="text/javascript">
        var qrcode = new QRCode(document.getElementById("qrcode"), {
            text: "@Html.Raw(this.Model.BarcodeUrl)",
            width: 192,
            height: 192,
            colorDark: "#000000",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.H
        });
    </script>
}