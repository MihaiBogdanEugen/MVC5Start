@model MVC5Start.ViewModels.Account.ManageViewModel
@{
    this.ViewBag.Title = "Manage";
}
<h2>@this.ViewBag.Title</h2>

<p class="text-success">@this.Model.Message</p>

<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name:</dt><dd>@this.Model.FirstName</dd>
        <dt>Last Name:</dt><dd>@this.Model.LastName</dd>
        <dt>Phone Number:</dt><dd>@this.Model.PhoneNumber</dd>
        <dt>Email:</dt><dd>@this.Model.Email</dd>
        <dt>Roles:</dt><dd>@this.Model.Roles</dd>
        <dt></dt><dd>[ @this.Html.ActionLink("Change your personal info", "ChangePersonalInfo") ]</dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt><dd>[ @Html.ActionLink("Change your password", "ChangePassword") ]</dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>Google Two-Factor Authentication:</dt>
        <dd>
        @if (this.Model.TwoFactorEnabled)
        {
            using (Html.BeginForm("DisableGoogleAuthenticator", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <text>Enabled [<input type="submit" value="Disable" class="btn btn-link" />]</text>
            }
        }
        else
        {
            <text>Disabled [@this.Html.ActionLink("Enable", "EnableGoogleAuthenticator", null, new { @class = "btn btn-link" })]</text>
        }
        </dd>
    </dl>
</div>