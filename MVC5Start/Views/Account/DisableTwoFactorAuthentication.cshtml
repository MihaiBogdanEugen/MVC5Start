@model MVC5Start.ViewModels.Account.DisableTwoFactorAuthenticationViewModel
@{
    this.ViewBag.Title = "Disable Two-Factor Authentication";
}
<h2>@this.ViewBag.Title</h2>
@using (Html.BeginForm("DisableTwoFactorAuthentication", "Account", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
{
    @Html.AntiForgeryToken()
    <h4>Enter the code for disabling the Two-Fator Authentication process</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}